<!DOCTYPE html>
<html lang="es">

<!-- head -->

<head>
	<%- include('partials/head') %>
    <link rel="stylesheet" href="/css/stylesheet.css">

    <title> G&X - Edit </title>
</head>
<!-- /head -->

<body>
	<!-- Header -->
	<%- include('partials/headerNav') %>
	<!-- /Header -->

	<div class="products-wrapper">
		<div class="title-container">
			<div class="editing-title">
				<h2 class="products-title">Estás editando: <i><%=productos.name%></i></h2>
			</div>
		</div>
		<div class="box-container">
			<form action="/products/edit/<%=productos.id%>?_method=PUT" method="POST"  enctype="multipart/form-data">
				<div class="pe-container">
					<div class="product-container">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="<%=productos.name%>" placeholder="Ej: Buzo Adidas " class="form-input">
					</div>
					<div class="product-container">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price"  value="<%=productos.price%>" placeholder="Ej: 13500" class="form-input">
					</div>
					<div class="product-container">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="<%=productos.discount%>" placeholder="Ej: 10" class="form-input">
					</div>
					<div class="product-container">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<% if (productos.category=="in-sale") {%>
								<option value="">Elegí</option>
								<option value="in-sale" selected>En oferta</option>
								<option value="visited" >Últimos agregados</option>
							<% } %>
							<% if (productos.category=="visited") {%>
								<option value="">Elegí</option>
								<option value="in-sale">En oferta</option>
								<option value="visited" selected>Últimos agregados</option>
							<% } %>{
						</select>
					</div>
					<div class="description-container">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%=productos.description%></textarea>
					</div>
					<div class="load-image-container">
						<label for="cImage" class="form-label">Cargar Imagen: </label>
						<input type="file" name="cImage" id="cImage"></input>
					</div>
					<div class="save-product">
						<button type="submit" class="btn-secondary">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>