	<div class="products-wrapper">
		<div class="box-container">
			<form action="create" method="POST" enctype="multipart/form-data">
				<div class="pe-container">
					<div class="admin-products-inputs-container">
						<div class="admin-product-panel-inputs-container">
							<label class="form-label-input label-sm">
								<span>Id:</span>
								<input name="generoId" type="text" placeholder="1"
									value="<%= (locals.applicated?.generoId) ?? '' %>" />
							</label>
			
							<label class="form-label-input label-lg">
								<span>Nombre:</span>
								<input name="generoNombre" type="text" placeholder="Nike"
									value="<%= (locals.applicated?.generoNombre) ?? '' %>" />
							</label>
			
						</div>
					</div>
					<div class="admin-products-buttons-container">
						<button type="reset" class="btn-secondary"> Limpiar </button>
						<button type="submit" class="btn-primary"> Buscar </button>
					</div>
					
					<div class="img-container">
						<div class="load-main-image-container cImage1" id="preview">
							<input type="file" name="cImage1" id="cImage1" class="form-input-img"></input>
							<label for="cImage1" class="form-label-img" id="cImage1-preview">
								<img src="/img/no-img.jpg" alt="">
								<div>
									<span>+</span>
								</div>
							</label>

							<% if (locals && locals.errors) { %>
							<% if (locals.errors[0].param=="cImage") { %>
							<h3> <%= locals.errors[0].msg %> </h3>
							<% } %>
							<% } %>
						</div>
						<div class="sub-img-container">
							<div class="load-sub-image-container">
								<input type="file" name="cImage2" id="cImage2" class="form-input-img"></input>
								<label for="cImage2" class="form-label-img" id="cImage2-preview">
									<img src="/img/no-img.jpg" alt="">
									<div>
										<span>+</span>
									</div>
								</label>

								<% if (locals && locals.errors) { %>
								<% if (locals.errors[0].param=="cImage") { %>
								<h3> <%= locals.errors[0].msg %> </h3>
								<% } %>
								<% } %>
							</div>

							<div class="load-sub-image-container">
								<input type="file" name="cImage3" id="cImage3" class="form-input-img"></input>
								<label for="cImage3" class="form-label-img" id="cImage3-preview">
									<img src="/img/no-img.jpg" alt="">
									<div>
										<span>+</span>
									</div>
								</label>

								<% if (locals && locals.errors) { %>
								<% if (locals.errors[0].param=="cImage") { %>
								<h3> <%= locals.errors[0].msg %> </h3>
								<% } %>
								<% } %>
							</div>

							<div class="load-sub-image-container">
								<input type="file" name="cImage4" id="cImage4" class="form-input-img"></input>
								<label for="cImage4" class="form-label-img" id="cImage4-preview">
									<img src="/img/no-img.jpg" alt="">
									<div>
										<span>+</span>
									</div>
								</label>

								<% if (locals && locals.errors) { %>
								<% if (locals.errors[0].param=="cImage") { %>
								<h3> <%= locals.errors[0].msg %> </h3>
								<% } %>
								<% } %>
							</div>

							<div class="load-sub-image-container">
								<input type="file" name="cImage5" id="cImage5" class="form-input-img"></input>
								<label for="cImage5" class="form-label-img" id="cImage5-preview">
									<img src="/img/no-img.jpg" alt="">
									<div>
										<span>+</span>
									</div>
								</label>

								<% if (locals && locals.errors) { %>
								<% if (locals.errors[0].param=="cImage") { %>
								<h3> <%= locals.errors[0].msg %> </h3>
								<% } %>
								<% } %>
							</div>
						</div>
					</div>

					<div class="data-container">
						<div class="product-container">
							<label for="name" class="form-label">Nombre del producto:</label>
							<input type="text" id="name" name="name" placeholder="Ej: Buzo Adidas " class="form-input">

							<% if (locals && locals.errors) { %>
							<% if (locals.errors[0].param=="name") { %>
							<h3> <%= locals.errors[0].msg %> </h3>
							<% } %>
							<% } %>

						</div>
						<div class="product-container">
							<label for="price" class="form-label">Precio del producto:</label>
							<input type="text" id="price" name="price" placeholder="Ej: 13500" class="form-input">

							<% if (locals && locals.errors) { %>
							<% if (locals.errors[0].param=="price") { %>
							<h3> <%= locals.errors[0].msg %> </h3>
							<% } %>
							<% } %>

						</div>
						<div class="product-container">
							<label for="category" class="form-label">Categoría:</label>
							<select name="category" id="category" class="form-input">
								<option value=""> Elegí </option>
								<% for(categoria of locals.categorias) { %>
								<option value="<%= categoria.id %>"> <%=categoria.nombre%> </option>
								<% } %>
							</select>

							<% if (locals && locals.errors) { %>
							<% if (locals.errors[0].param=="category") { %>
							<h3> <%= locals.errors[0].msg %> </h3>
							<% } %>
							<% } %>

						</div>
					</div>

					<div class="save-product">
						<a class="btn-secondary" href='/admin/panel/products' type="button"> Volver </a>
						<button type="submit" class="btn-primary">Crear producto</button>
					</div>
				</div>
			</form>
		</div>
	</div>